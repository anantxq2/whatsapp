<script>
// âœ… Redirect URLs list
const urls = [
  "https://a.com",
  "https://s.com",
  "https://d.com",
  "https://f.com",
  "https://g.com",
  "https://h.com"
];
document.getElementById("random-btn").addEventListener("click", function(e){
  e.preventDefault();
  // random URL pick
  const randomLink = urls[Math.floor(Math.random() * urls.length)];
  window.location.href = randomLink;
});
</script>


